<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile_fragment"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rellayout1">

        <include layout="@layout/snippet_layout_editprofile_toolbar"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rellayout1"
        android:layout_marginTop="30sp">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/profile_image_edit"
            android:layout_width="112dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/edit_profile_area"
            android:layout_below="@id/profile_image_edit"
            >

            <Button
                android:id="@+id/delete_image_photo"
                android:layout_width="138dp"
                android:layout_height="38dp"
                android:layout_marginLeft="55dp"
                android:background="@drawable/button_shape"
                android:text="Delete Photo"
                android:textColor="#4E260E" />


            <Button
                android:id="@+id/change_image_photo"
                android:layout_width="138dp"
                android:layout_height="38dp"
                android:background="@drawable/button_shape"
                android:text="Change Photo"
                android:textColor="#4E260E" />

        </LinearLayout>


        <TextView
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_profile_area"
            android:layout_marginTop="15dp"
        android:text="Name"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/EditFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fname"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/usName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/EditUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_below="@id/usName"
        tools:layout_editor_absoluteX="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/webname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website link"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/EditWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/webname"
        tools:layout_editor_absoluteX="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bioname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/EditBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:layout_below="@id/bioname"
        tools:layout_editor_absoluteX="0dp" />
    </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

